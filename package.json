{
  "name": "commitollama",
  "displayName": "commitollama",
  "description": "AI Commits with ollama",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Machine Learning",
    "Programming Languages"
  ],
  "keywords": [
    "code",
    "assistant",
    "ai",
    "llm",
    "commits"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commitollama.createCommit",
        "title": "Run Commitollama",
        "icon": "$(sparkle)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "when": "scmProvider == git",
          "command": "commitollama.createCommit",
          "group": "navigation"
        }
      ]
    },
    "configuration": [
      {
        "title": "Commitollama",
        "properties": {
          "inference.endpoint": {
            "type": "string",
            "default": "",
            "description": "Ollama Server Endpoint. Empty for local instance.",
            "order": 1
          },
          "inference.model": {
            "type": "string",
            "enum": [
              "codellama",
              "mistral",
              "custom"
            ],
            "default": "mistral",
            "description": "Inference model to use",
            "order": 2
          },
          "inference.custom.model": {
            "type": "string",
            "default": "",
            "description": "Custom model name",
            "order": 3
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "pnpm dlx @biomejs/biome lint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.1",
    "@types/common-tags": "^1.8.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "~18.19.6",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "common-tags": "1.8.2",
    "typescript": "^5.3.3"
  }
}
